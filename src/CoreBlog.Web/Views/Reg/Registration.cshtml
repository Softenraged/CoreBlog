@{
    ViewBag.Title = "Registration";
}

@if (ViewData["Message"] == null)
{
    @Html.Partial("_Register")
}

@if (ViewData["Message"] != null)
{
    <div>
        <h1>@ViewData["Message"]</h1>
        <p>
            We just sent you a confirmation email to @ViewData["Email"]
        </p>
    </div>
    <div>
        @Html.Partial("_Redirect")
    </div>

    @section Scripts {
        <environment names="Staging">
            <script src="~/js/Scripts/redirect.min.js"></script>
        </environment>
        <environment names="Development">
            <script src="~/js/Scripts/redirect.js"></script>
        </environment>
    }
}
