@model CoreBlog.Web.ViewModels.Account.RegistrationViewModel 
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2>Join us!</h2>

        <form novalidate method="post">
            <div class="form group">
                <label asp-for="UserName">Username</label>
                <input asp-for="UserName" class="form-control text-muted" placeholder="Enter your name" />
                <span asp-validation-for="UserName" class="text-muted"></span>
            </div>
            <div class="form group">
                <label asp-for="Email" placeholder="Enter your email">Email</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>
            <div class="form group">
                <label asp-for="Password" placeholder="Enter your password">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-muted"></span>
            </div>
            <div class="form group">
                <label asp-for="ConfirmPassword" placeholder="Confirm your password">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-muted"></span>
            </div>
            <div class="form group">
                <label asp-for="Age" placeholder="Enter your age">Age</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-muted"></span>
            </div>
            <div class="form-group text-right">
                <recaptcha align="center" />
                <span class="text-danger" id="recaptchaErrorMessage"></span>
            </div>
            <div class="form-group list-group">
                <button type="submit" class="list-group-item list-group-item-action"  style="text-align:center;outline:none">Sign up!</button>
                <a asp-controller="Blog" asp-action="Index" class="list-group-item list-group-item-action" style="text-align:center;">Cancel</a>
               
            </div>
            <div asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
</div>

@section Scripts {
    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
}