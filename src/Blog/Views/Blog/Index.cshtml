@using Sakura.AspNetCore;
@using Blog.ViewModels
@using Blog.Models
@model Blog.ViewModels.PageViewModel


@{ 
    @if(Model.PostsPerPage.IsFirstPage())
    {
        ViewBag.Title = "Latest posts";
        ViewBag.PageName = "Latest posts";

    }
    ViewBag.PageName = "Latest posts";
    ViewBag.Title = "CoreBlog";

}

@section Styles {
    <link rel="stylesheet" href="~/css/BackToTop.css" />
    <link rel="stylesheet" href="~/css/SearchBar.css" />
}

@section Scripts {
    <script src="~/js/scrollToTop.js"></script>
}


@{ 
    var latestPosts = Model.PostsPerPage.Where(option => option.PostedOn.Date == DateTime.Today);
}

<div class="row">
    <div class="col-lg-9">

        @if (Model.PostsPerPage.TotalCount != 0)
        {
            @Html.Partial("_Posts", Model)

        }
    </div>
    <div class="col-lg-3">
        @Html.Partial("_Search", Model.Search)
        <div class="well">
            <h2>Categories</h2>
            <div class="list-group">
                <a href="#" class="list-group-item"><span class="badge">@Model.PostsPerPage.Source.Where(opt => opt.Category.Name == "Development").Count()</span>Development</a>
                <a href="#" class="list-group-item"><span class="badge">@Model.PostsPerPage.Source.Where(opt => opt.Category.Name == "Managment").Count()</span>Managment</a>
                <a href="#" class="list-group-item"><span class="badge">@Model.PostsPerPage.Source.Where(opt => opt.Category.Name == "Design").Count()</span>Design</a>
                <a href="#" class="list-group-item"><span class="badge">@Model.PostsPerPage.Source.Where(opt => opt.Category.Name == "Other").Count()</span>Other</a>
            </div>
        </div>
        <div class="well">
            <h2>Latest posts</h2>
            <ul class="list-group">
                @foreach (var post in latestPosts)
                {
                    <li class="list-group-item"><a asp-controller="Post" asp-action="OpenPost" asp-route-id="@(post.Id)"> @post.Title</a></li>
                }
            </ul>
        </div>
    </div>
</div>

<a href="#" class="scrollToTop"><i class="glyphicon glyphicon-triangle-top"></i></a>
<div class="container">
    <div class="row">
        @Html.Partial(@"_Pagination", Model)
    </div>
</div>
