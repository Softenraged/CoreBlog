@using Sakura.AspNetCore;
@using Blog.ViewModels
@using Blog.Models
@model Blog.ViewModels.PageViewModel


@section Styles {
    <link rel="stylesheet" href="~/css/BackToTop.css" />
}

@section Scripts {
    <script src="~/js/scrollToTop.js"></script>
}




    <div class="row" padding-top="100px">
        <div class="col-lg-9">

        @if (Model.PostsPerPage.TotalCount != 0)
        {
            @Html.Partial("_Posts", Model)

        }
        </div>
        <div class="col-lg-3">
            <div>@Html.Partial("_Search", Model.Search)</div>
            <h5>Categories</h5>
            <ul>               
                <li>Managment</li>
                <li>Development</li>
                <li>Design</li>
                <li>Other</li>
            </ul>
        </div>
    </div>

<p id="back-top">
    <a href="#top"><span></span>Back to top</a>
</p>



<div class="container">
    <div class="row">
        @Html.Partial(@"_Pagination", Model)
    </div>
</div>
