@model Blog.Models.PostViewModels.PostViewModel

@{
    ViewData["Title"] = "_PostTemplate";
}

<h2>Create new post</h2>

<form asp-action="CreatePost">
    <div class="form-horizontal">
        <h4>PostViewModel</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Meta" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Meta" class="form-control" />
                <span asp-validation-for="Meta" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form group">
            <label asp-for="Password" placeholder="Enter your password">Password</label>
            <textarea cols="40" rows="4" asp-for="Password" class="form-control"></textarea>
            <span asp-validation-for="Password" class="text-muted"></span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

