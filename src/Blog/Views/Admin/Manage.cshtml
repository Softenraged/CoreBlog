@model ICollection<Blog.ViewModels.PostViewModel>
@{
    ViewBag.Title = "Manage panel";
}

@section Scripts{
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/js/personApp.js"></script>
    <script src="~/js/personController.js"></script>
}

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">New posts</a></li>
    <li><a data-toggle="tab" href="#menu1">Users</a></li>
    <li><a data-toggle="tab" href="#menu2">Suspended Users</a></li>
</ul>

<div class="tab-content" ng-app="personApp">
    <div id="home" class="tab-pane fade in active" ng-controller="personController as vm">
        <div class="text-danger" ng-show="vm.error">{{vm.error}}</div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date</th>
                    <th>Is published</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="post in vm.posts">
                    <td>{{post.title}}</td>
                    <td>{{post.author}}</td>
                    <td>{{post.postedOn | date: 'MM-dd-yyyy'}}</td>
                    <td>{{post.isPublished}}</td>
                </tr>
            </tbody>               
        </table>
        <button ng-click="vm.sortByName()">Sort</button>
    </div>
    <div id="menu1" class="tab-pane fade">
        <h3>Menu 1</h3>
        <p>Some content in menu 1.</p>
    </div>
    <div id="menu2" class="tab-pane fade">
        <h3>Menu 2</h3>
        <p>Some content in menu 2.</p>
    </div>
</div>