@model Blog.Models.PostViewModels.PostCreateViewModel
@using Blog.ViewModels
@{ 
   
    ViewBag.Title = "New post";
  //  Model.Tags = new List<TagViewModel>(5);
}

@section Scripts {
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
<div class="col-md-4 col-md-offset-4">
    <h2>New Post</h2>
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control text-muted" placeholder="Enter your name" />
            <span asp-validation-for="Title" class="text-muted"></span>
        </div>
        <div class="col-xs-1">
            <select class="dropdown-menu" asp-for="Category.Name">
                <option value="Development">Development</option>
                <option value="Managment">Managment</option>
                <option value="Design">Design</option>
                <option value="Other">Other</option>
            </select>
            <input class="tag" asp-for="Tags[0].Name" />
            <input class="tag" asp-for="Tags[1].Name" />
            <input class="tag" asp-for="Tags[2].Name" />
            <input class="tag" asp-for="Tags[3].Name" />
            <input class="tag" asp-for="Tags[4].Name" />
         </div>
        <div class="form group">
            <label asp-for="ShortDescription">Short description</label>
            <input asp-for="ShortDescription" class="form-control" />
            <span asp-validation-for="ShortDescription" class="text-muted"></span>
        </div>
        <div class="form group">
            <label asp-for="Description">Your post</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-muted"></span>

            <a asp-contoller="Blog" asp-action="Index" class="btn btn-default">Cancel</a>
            <input type="submit" value="Post" class="btn btn-success" />
        </div>

    </form>
</div>
</div>
