@model Blog.ViewModels.PostViewModel

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">

        <!-- Blog Post -->
        <!-- Title -->
        <h1 class="text-center">@Model.Category.Name: @Model.Title</h1>
        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Posted on @Model.PostedOn by <h3>@Model.Author</h3> </p>

        <hr>

        <!-- Preview Image -->
        <img class="img-responsive" src="http://placehold.it/900x300" alt="@Model.Title">

        <hr>

        <!-- Post Content -->
        <p class="lead">@Model.ShortDescription</p>
        <p>@Model.Description</p>
        <hr>
    </div>
</div>